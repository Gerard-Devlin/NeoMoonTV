# Required: owner account for multi-account mode
USERNAME=admin
PASSWORD=change_this_password

# Optional: allow public registration
NEXT_PUBLIC_ENABLE_REGISTER=false

# Storage (defaults are set in docker-compose.yml)
# NEXT_PUBLIC_STORAGE_TYPE=redis
# REDIS_URL=redis://moontv-redis:6379

# Danmaku
DANMAKU_API_BASE=https://your-danmaku-endpoint.example
DANMAKU_API_TOKEN=87654321

# Content / proxy / filter
NEXT_PUBLIC_DISABLE_YELLOW_FILTER=true
NEXT_PUBLIC_IMAGE_PROXY=/api/image-proxy?url=

# TMDB
TMDB_API_KEY=your_tmdb_api_key
# Optional: TMDB relay base URL when direct access is blocked
# TMDB_API_BASE_URL=https://your-tmdb-relay.example/3

# Turnstile
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key

# Optional site settings
# SITE_NAME=MoonTV
# ANNOUNCEMENT=Only for personal use.
